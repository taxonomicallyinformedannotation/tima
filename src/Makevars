## Generic optimization flags
CFLAGS += -O3 -mtune=native -ffast-math
CXXFLAGS += -O3 -mtune=native -ffast-math
FFLAGS += -O3 -mtune=native -ffast-math
FCFLAGS += -O3 -mtune=native -ffast-math

## Optionally add OpenMP flags if available
ifneq ($(SHLIB_OPENMP_CFLAGS),)
    CFLAGS += $(SHLIB_OPENMP_CFLAGS)
endif
ifneq ($(SHLIB_OPENMP_CXXFLAGS),)
    CXXFLAGS += $(SHLIB_OPENMP_CXXFLAGS)
endif
